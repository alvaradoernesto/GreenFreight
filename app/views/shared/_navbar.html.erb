<div class="navbar sticky-top navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
    <div class="row">
        <h1 class="logo black-shadow">Green Freight</h1>
    </div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if user_signed_in? && current_user.role == "Transportista" %>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "Nuevo viaje", "/loads", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Mis viajes", "/my_freights", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Mis camiones", "/mytrucks", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Nuevo camión", "/trucks/new", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Soporte", "/set_nick", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <% if current_user.avatar.present? %>
              <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
                <%= image_tag "default-avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Estadísticas", "/users", class: "dropdown-item" %>
              <%= link_to "Editar perfil", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        </ul>
      <% elsif user_signed_in? && current_user.role == "Cargador" %>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "Nueva carga", "/loads/new", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Mis cargas", "/myloads", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Soporte", "/set_nick", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <% if current_user.avatar.present? %>
              <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
                <%= image_tag "default-avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Estadísticas", "/users", class: "dropdown-item" %>
              <%= link_to "Editar perfil", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        </ul>
      <% else %>
          <li class="nav-item">
            <button class="button green-button align-middle"><%= link_to "Registrate", new_user_registration_path %></button>
            <button class="button green-button align-middle"><%= link_to "Iniciar sesión", new_user_session_path %></button>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "default-avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Editar perfil", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        </ul>
      <% end %>
  </div>
</div>
