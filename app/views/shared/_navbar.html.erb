<div class="navbar sticky-top navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
    <div class="row">
        <h1 class="logo black-shadow">Green Freight</h1>
    </div>
  <% end %>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? && current_user.role == "Transportista" %>
        <a class="nav-item nav-link" href="/loads">Loads available</a>
        <a class="nav-item nav-link" href="/freights/new">My Freights</a>
        <a class="nav-item nav-link" href="/mytrucks">My trucks</a>
        <a class="nav-item nav-link" href="/trucks/new">New truck</a>
        <a class="nav-item nav-link" href="/set_nick">Support</a>
      <% elsif user_signed_in? && current_user.role == "Cargador" %>
        <a class="nav-item nav-link" href="#">Create load</a>
        <a class="nav-item nav-link" href="#">My loads</a>
      <% end %>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

