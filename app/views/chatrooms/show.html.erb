<div class="container">
  <h1 class="black-shadow">#<%= @chatroom.name %></h1>
  <div id="messages" style="border-radius: 4px;" class="white-box" data-chatroom-id="<%= @chatroom.id %>">
    <% @chatroom.messages.each do |message| %>
      <div class="message-container" id="message-<%= message.id %>">
        <i class="author">
          <span style="color: black;"><%= message.user.nickname %></span>
          <small style="color: black;"><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
        </i>
        <p><%= message.content %></p>
      </div>
    <% end %>
    <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %><%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= f.input :content,label: false, placeholder: "Message for ##{@chatroom.name}", class: "form-control" %>
      <%= f.button :submit, label: "Send comment", class: "btn btn-outline-secondary" %>
    <% end %>
  </div>
</div>
