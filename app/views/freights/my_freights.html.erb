<div class="container">
  <br>
  <h1 class="black-shadow">Mis viajes realizados</h1>
  <br>
  <div class="form form-box">
    <table class="table table-hover white-box">
      <thead>
        <tr>
          <th class="align-middle" scope="col">Fecha</th>
          <th class="align-middle" scope="col">Origen</th>
          <th class="align-middle" scope="col">Destino</th>
          <th class="align-middle" scope="col">Tipo de carga</th>
          <th class="align-middle" scope="col">Camión asignado</th>
          <th class="align-middle" scope="col">Conductor</th>
          <th class="align-middle" scope="col">Distancia</th>
          <th class="align-middle" scope="col">Utilización</th>
          <th class="align-middle" scope="col">Estado</th>
          <th class="align-middle" scope="col">Detalle</th>
        </tr>
      </thead>
      <tbody>
        <% @freights.each do |freight| %>
          <tr>
            <td class="align-middle"><%= freight.start_date.strftime("%d.%m.%y") %></td>
            <td class="align-middle"><%= freight.start_point %></td>
            <td class="align-middle"><%= freight.end_point %></td>
            <td class="align-middle"><%= freight.loads.first&.load_category&.description %></td>
            <td class="align-middle"><%= freight.truck.truck_name %></td>
            <td class="align-middle"><%= freight.truck.driver_name %></td>
            <td class="align-middle"><%= number_with_delimiter(freight.distance.round(0), delimiter: ".") %></td>
            <td class="align-middle"><%= number_to_percentage(freight.capacity, precision: 0) %></td>
            <td class="align-middle"><%= freight.status %></td>
            <td class="align-middle justify-content-center">
              <%= link_to "Detalle", freight_path(freight), class: "button green-button align-middle" %>
              <a class="button green-button align-middle" href="#">Estado</a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="form-row d-flex justify-content-center p-1">
      <div class="p-1">
        <%= link_to "Nuevo camión", new_truck_path, class: "button green-button align-middle" %>
      </div>
      <div class="p-1">
        <%= link_to "Nuevo viaje", loads_path, class: "button green-button align-middle" %>
      </div>
      <div class="p-1">
        <%= link_to "Estadísticas", users_path, class: "button green-button align-middle" %>
      </div>
    </div>
  </div>
</div>
