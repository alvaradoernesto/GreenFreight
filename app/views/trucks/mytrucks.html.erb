<div class="container">
  <br>
  <h1 class="black-shadow">Mis camiones activos</h1>
  <br>
  <div class="form form-box">
    <table class="table table-hover white-box">
      <thead>
        <tr>
          <th class="align-middle" scope="col">Identificación</th>
          <th class="align-middle" scope="col">Precio por km</th>
          <th class="align-middle" scope="col">Capacidad</th>
          <th class="align-middle" scope="col">Conductor</th>
          <th class="align-middle" scope="col">Licencia conductor</th>
          <th class="align-middle" scope="col">Patente</th>
          <th class="align-middle" scope="col">Categoría</th>
          <th class="align-middle" scope="col">Cargas aceptadas</th>
          <th class="align-middle" scope="col">Imagen</th>
        </tr>
      </thead>
      <tbody>
        <% @trucks.each do |truck| %>
          <tr>
            <td class="align-middle"><%= truck.truck_name %></td>
            <td class="align-middle"><%= number_to_currency truck.price_per_km %></td>
            <td class="align-middle"><%= truck.capacity %></td>
            <td class="align-middle"><%= truck.driver_name %></td>
            <td class="align-middle"><%= truck.driver_license %></td>
            <td class="align-middle"><%= truck.truck_license %></td>
            <td class="align-middle"><%= truck.truck_category.description %></td>
            <td class="align-middle">
              <% truck.load_categories.each do |cat| %>
                <%= cat.description %>
              <% end %>
            </td>
            <td class="align-middle">
              <% if truck.photo.present? %>
                <%= cl_image_tag truck.photo.key, height: 60, width: 80, crop: :fill %>
              <% else %>
                <%= image_tag "default-truck.png", height: 60, width: 80, crop: :fill %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="form-row d-flex justify-content-center p-1">
      <div class="p-1">
        <%= link_to "Nuevo viaje", loads_path, class: "button green-button align-middle" %>
      </div>
      <div class="p-1">
        <%= link_to "Estadísticas", users_path, class: "button green-button align-middle" %>
      </div>
    </div>
  </div>
</div>
