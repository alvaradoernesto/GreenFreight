<div class="container">
  <br>
  <h1 class="black-shadow">Nueva Carga</h1>
  <br>
  <div class="container row">
    <div class="form-box col">
      <%= simple_form_for @load do |f| %>
        <div class="form-row white-box">
          <div class="form-group col-md-6">
            <%= f.input :start_date, placeholder: "Fecha inicio", label: "Fecha inicio:" %>
          </div>
          <div class="form-group col-md-6">
            <%= f.input :end_date, placeholder: "Fecha de llegada", label: "Fecha de llegada:" %>
          </div>
        </div>
        <div class="form-row white-box">
          <div class="form-group col-md-6">
            <%= f.simple_fields_for :start_point do |spf| %>
            <%= spf.input :location, placeholder: "Â¿Desde donde sale?", label: "Lugar de carga:" %>
            <% end %>
          </div>
        <div class="form-group col-md-6">
            <%= f.simple_fields_for :end_point do |epf| %>
            <%= epf.input :location, placeholder: "Â¿A donde llega?", label: "Lugar de entrega:" %>
            <% end %>
          </div>
        </div>
        <div class="form-row white-box">
          <div class="form-group col-md-4">
            <%= f.input :hour_range, collection: [["7:00-12:00"], ["12:00-17:00"], ["17:00-22:00"]], selected: "MaÃ±ana", label: "Rango horario:" %>
          </div>
          <div class="form-group col-md-4">
            <%= f.input :weight, placeholder: "1..5000", label: "Peso aproximado:" %>
          </div>
          <div class="form-group col-md-4">
            <%= f.input :volume, placeholder: "1..300", label: "Volumen aproximado:" %>
          </div>
        </div>
        <div class="form-row white-box">
          <div class="form-group col-md-4">
            <%= f.input :load_category_id, collection: LoadCategory.all, label_method: :description, label: "Categoria:" %>
          </div>
          <div class="form-group col-md-4">
            <%= f.input :special_requirement_id, collection: SpecialRequirement.all, label_method: :description, label: "Requerimiento especiales:" %>
          </div>
          <div class="form-group col-md-4">
            <%= f.input :photo, as: :file, label: 'Imagen de la carga', placeholder: "Imagen de la carga" %>
          </div>
        </div class="form-group">
        <div class="form-row d-flex justify-content-center">
          <%= f.button :submit, "Crear Carga  ğŸšš", class: "button green-button"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
